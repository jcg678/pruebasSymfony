{% extends 'BlogBundle::layout.html.twig' %}
{% block content %}
    <div class="col-md-6">
        <h2>Tags</h2>
        <hr>
        <a href="{{ path("blog_add_category") }}" class="btn btn-success">Añadir Categoria</a>
        <table class="table table-bordered">
        <tr><th>Nombre</th><th>Descripcion</th>
        <th>Eliminar</th>
        <th>Editar</th>
        </tr>
        {% for category in categories %}
            <tr>
            <td>{{ category.name }}</td>
            <td>{{ category.description }}</td>
                <td><a href="{{ path('blog_edit_category',{"id":category.id}) }}" class="btn  btn-danger">Editar</a></td>
            <td>
                {%  if category.entries|length == 0 %}
                <a href="{{ path('blog_delete_category',{"id":category.id}) }}" class="btn  btn-danger">Eliminar</a>
                    {% else %}
                    Categoria en uso
                        {% endif %}
            </td>
        </tr>
        {% endfor  %}

        </table>
    </div>
    <div class="clear-fix"></div>
{% endblock %}